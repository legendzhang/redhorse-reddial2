<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="wrap_content" 
	android:layout_height="fill_parent">
	<GridView
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/myGrid"
	  android:padding="5dp"
	  android:verticalSpacing="5dp" 
	  android:horizontalSpacing="5dp"
	  android:layout_width="wrap_content"
	  android:layout_height="fill_parent"
	  android:stretchMode="columnWidth"
	  android:layout_weight="1" android:numColumns="3">
	</GridView>
	<LinearLayout android:layout_weight="1" android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="100dp" 
		xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:padding="1dip">
		<Button android:text="微博分享"  android:layout_weight="2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/weibogrid"></Button>
		<Button android:text="联系人"  android:layout_weight="2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Button01"></Button>
		<Button android:text="退出" android:layout_weight="2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Button03"></Button>
	</LinearLayout>
</LinearLayout>

